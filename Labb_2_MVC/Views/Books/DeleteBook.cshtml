@model Labb2_CallAPI_ASP.Data.Books

@{
	ViewData["Title"] = "Delete";
}
<div >
    <form asp-action="DeleteBook">
        <div class="container border p-3">
            <hr />
            <div class="row">

                <div class="col-2">
                    <label asp-for="Title" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Title" disabled class="form-control"/>
                </div>

                <div class="col-2">
                    <label asp-for="Author" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Author" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Year" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Year" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Description" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Description" disabled class="form-control rows="5" />
                </div>

                <div class="col-2">
                    <label asp-for="InStock" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="InStock" disabled class="form-control rows="5" />
                </div>


                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="BookIndex">Back To List</a>
                </div>
            </div>
        </div>
    </form>
</div>